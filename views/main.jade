extends layout

block content

    .header
        .title
            = 'Coppers '
            span.batch-icon &#xf0d7;
        .nav-user
            a#nav-user(href="#")
                span.batch-icon &#xf044;

    .navigation
        .nav-column
            a#nav-new(href='#')
                span.batch-icon &#xf015;
                |  New
        .nav-column
            a#nav-filter(href='#')
                span.batch-icon &#xf11e;
                |  Filter
        .nav-column
            a#nav-group(href='#')
                span.batch-icon &#xf127;
                |  Group

    .content
        #data

        #no-data-yet
            .icon
                span.batch-icon &#xf0d7;
            .title Welcome to Coppers!
            .text
                | You haven't added any data yet.
                br
                | Try&nbsp;&nbsp;
                a(href='#')
                    span.batch-icon &#xf015;
                    |  adding a new Spending!

        #no-results
            .icon
                span.batch-icon &#xf0d7;
            .title No matching Spendings :(
            .text
                | Nothing matches your filtering criteria.
                br
                | Try&nbsp;&nbsp;
                a(href='#')
                    span.batch-icon &#xf11e;
                    |  changing some of the filters!

        #floater-overlay

    include ./floaters/new
    include ./floaters/filters
    include ./floaters/grouping
    include ./floaters/user


block additional_js
    script(src="js/api.js")
    script(src="js/smoothly.js")
    script(src="js/spending.js")
    script(src="js/detailedTable.js")
    script(src="js/groupedTable.js")
    script(src="js/filters.js")
    script(src="js/grouping.js")
    script(src="js/stats.js")
    script(src="js/controller.js")
    script(src="js/floaters.js")
    script(src="js/multi_select.js")
    script(src="js/single_select.js")
    script(src="js/floaterNew.js")

block additional_head
    link(rel="stylesheet", href="/stylesheets/slider.css")